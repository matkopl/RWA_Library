@model BL.Viewmodels.CreateReservationVM

@{
    ViewData["Title"] = "Reserve book";
}

<h4>Reserve Book</h4>
<hr />


<form method="post" asp-action="Create">
    @Html.HiddenFor(Model => Model.BookId)
    @Html.HiddenFor(Model => Model.Book)
    <div class="form-group">
        <label asp-for="Book" class="control-label"></label>
        <input asp-for="Book" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Genre" class="control-label"></label>
        <input asp-for="Genre" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="LocationId" class="control-label"></label>
        <select asp-for="LocationId" class="form-select">
            <option value="">Select a Location</option>
            @foreach (var location in Model.Locations)
            {
                <option value="@location.Id">@location.Name</option>
            }
        </select>
        <span asp-validation-for="LocationId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Reserve</button>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
