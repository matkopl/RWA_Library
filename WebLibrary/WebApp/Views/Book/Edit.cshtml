@model BL.Viewmodels.UpdateBookVM

@{
    ViewData["Title"] = "Edit Book";
}

<h2>Edit Book</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Author" class="control-label"></label>
        <input asp-for="Author" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="GenreId" class="control-label"></label>
        <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
    </div>

    <div class="form-group">
        <label>Locations</label>
        @for (int i = 0; i < Model.Locations.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="Locations[i].Id" />
                <input type="checkbox" class="form-check-input" asp-for="Locations[i].IsChecked" />
                <label class="form-check-label">@Model.Locations[i].Name</label>
            </div>
        }
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
